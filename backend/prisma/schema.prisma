// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String

  role     Roles     @relation(fields: [id_role], references: [id])
  id_role  Int       @unique
  Students Students?
}

model Students {
  id      Int    @id @default(autoincrement())
  name    String
  user    Users  @relation(fields: [id_user], references: [id])
  id_user Int    @unique
}

model Roles {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  Users Users[]
}

model Capacity {
  id         Int @id @default(autoincrement())
  percentage Int @unique
}

model Questions {
  id       Int    @id @default(autoincrement())
  question String
  answer   String
}

model Subjects {
  id      Int     @id @default(autoincrement())
  name    String
  teacher String
  Hours   Hours[]
}

model Hours {
  id         Int    @id @default(autoincrement())
  start_hour String
  end_hour   String

  subject    Subjects @relation(fields: [id_subject], references: [id])
  id_subject Int
}

model Groups {
  id   Int    @id @default(autoincrement())
  name String
}

model ClassGroups {
  id Int @id @default(autoincrement())
}
